{
  "manifest_version": 2,

  "name": "CourseraBrowse",
  "description": "Browse Coursera course offerings and information through a popup Chrome extension. 
  				  No need to leave your current page!",
  "version": "0.1.0",
   
  "background": {
	"scripts": [
		"js/jquery-2.1.0.min.js",
		"js/background.js"
	],
	"persistent": false
  },
  "icons": {
	"16": 	"img/courseraBrowse-logo_16.png",
	"48":	"img/courseraBrowse-logo_48.png",
	"128":	"img/courseraBrowse-logo_128.png"
  },
  "browser_action": {
    "default_icon": "img/courseraBrowse-logo_16.png",
	"default_popup": "popup.html"
  },
  "permissions": [
	"http://*.coursera.org//*",
    "https://*.coursera.org//*",
	"contextMenus",
	"storage"
  ]
}